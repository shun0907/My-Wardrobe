<% provide(:title, @title) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <%= gravatar_for @user %>
      <h1><%= @user.name %></h1>
      <span><%= link_to "view my profile", @user %></span>
      <span><b>Fashion List :</b> <%= @user.microposts.count %></span>
    </section>
    <section class="stats">
      <%= render 'shared/stats' %>
      <% if @users.any? %>
        <div class="user_avatars">
          <% @users.each do |user| %>
            <%= link_to gravatar_for(user, size: 30), user %>
          <% end %>
        </div>
      <% end %>
    </section>
  </aside>
  <div class="col-md-8 following-list">
    <h3 class="following-list-title"><%= @title %></h3>
    <% if @users.any? %>
      <div class="following-list-background">
        <ul class="users follow">
          <%= render @users %>
        </ul>
      </div>
      <div class="following-list-paginate"><%= will_paginate %></div>
    <% end %>
  </div>
</div>