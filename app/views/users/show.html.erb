<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
    <section class="stats">
      <%= render 'shared/stats' %>
    </section>
  </aside>
  <div class="col-md-8 users-fashion-list">
    <%= render 'follow_form' if logged_in? %>
    <% if @user.microposts.any? %>
      <h3 class="users-list-title">Fashion List (<%= @user.microposts.count %>)</h3>
      <ol class="microposts">
        <div class="users-profile-background"><%= render @microposts %></div>
      </ol>
      <div class="users-profile-paginate"><%= will_paginate @microposts %></div>
    <% end %>
  </div>
</div>